<form class="form-signin" action='/admins/registerBusiness' method='POST'>
    <h2 class="form-signin-heading">Sign up a business</h2>

    <label for="inputName" class="sr-only">Name</label>
    <input type="text" id="inputName" class="form-control" placeholder="Name" name='businessName' required autofocus>

    <label for="inputPhoneNumber" class="sr-only">Phone Number</label>
    <input class="form-control" type='text' name='phoneNumber' id='inputPhoneNumber' placeholder="Phone Number" required/>

    <label for="inputDescription" class="sr-only">Description</label>
    <input type="text" id="inputDescription" class="form-control" placeholder="Description" name='description' required>

    <label for="inputLatitude" class="sr-only">Latitude</label>
    <input class="form-control" type='number' step='any' name='latitude' id='inputLatitude' placeholder="Latitude" required/>

    <label for="inputLongitude" class="sr-only">Longitude</label>
    <input class="form-control" type='number' step='any' name='longitude' id='inputLongitude' placeholder="Longitude" required/>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name='email' required>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" name='password' required>

    <button class="btn btn-lg btn-primary btn-block submit_button" type="submit">Register Business</button>

</form>
