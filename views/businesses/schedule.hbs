{{#extend "head"}}
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <style type="text/css" media="screen">
        html, body{
            margin:0px;
            padding:0px;
            height:100%;
            overflow:hidden;
        }
    </style>
    <style>
         .dhx_cal_date{
            display:none;
        }
    </style>
{{/extend}}

{{#extend "stylesheets"}}
    <link rel="stylesheet" href="/codebase/dhtmlxscheduler.css">
{{/extend}}

{{#extend "scripts"}}
<script src="/codebase/dhtmlxscheduler.js" type="text/javascript" charset="utf-8" ></script>
<script src="/codebase/ext/dhtmlxscheduler_recurring.js"></script>
    <script>
        function init() {
            scheduler.config.xml_date="%Y-%m-%d %H:%i";
            scheduler.config.drag_resize = false;
            scheduler.config.icons_edit = ['icon_save', 'icon_cancel'];
            scheduler.config.icons_select = ['icon_details', 'icon_edit'];
            scheduler.config.hour_date = "%g:%i%a";
            scheduler.config.details_on_create = true;
            scheduler.config.details_on_dblclick = true;
            scheduler.templates.event_text = function(start, end, ev){
                ev.text = "Able To Host Soir√©e";
                return ev.text;
            };
            scheduler.init('scheduler_here',new Date(2016,7,7),"week");

            scheduler.templates.xml_date = function(value){ return new Date(value); };
            scheduler.load("/data", "json");

            scheduler.attachEvent("onEventAdded",function(id, e){
                scheduler.load("/data", "json");
                location.reload(true);
            });
            scheduler.attachEvent("onLightbox", function(){
                var recurring = scheduler.formSection("recurring").node.parentNode;
                recurring.style.display = "none";
            });
            var dp = new dataProcessor("/data");
            dp.init(scheduler);
            dp.setTransactionMode("POST", false);

    }
    </script>
{{/extend}}

<body onload="init();">
<div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;'>
    <div class="dhx_cal_navline">
        <div class="dhx_cal_prev_button">&nbsp;</div>
        <div class="dhx_cal_next_button">&nbsp;</div>
        <div class="dhx_cal_today_button"></div>
        <div class="dhx_cal_date"></div>
    </div>
    <div class="dhx_cal_header">
    </div>
    <div class="dhx_cal_data">
    </div>
</div>
</body>

