{{#extend "head"}}
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <style type="text/css" media="screen">
        html, body{
            margin:0px;
            padding:0px;
            height:100%;
            overflow:hidden;
        }
    </style>
    <style>
         .dhx_cal_next_button, .dhx_cal_prev_button, .dhx_cal_today_button, .dhx_cal_date{
            display:none;
        }
    </style>
{{/extend}}

{{#extend "stylesheets"}}
    <link rel="stylesheet" href="/codebase/dhtmlxscheduler.css">
{{/extend}}

{{#extend "scripts"}}
<script src="/codebase/dhtmlxscheduler.js" type="text/javascript" charset="utf-8" ></script>


    <script>
        function init() {

            scheduler.config.xml_date="%Y-%m-%d %H:%i";
            scheduler.config.drag_resize = true;
            scheduler.config.icons_edit = ['icon_save', 'icon_cancel'];
            scheduler.config.icons_select = ['icon_edit'];
            scheduler.config.hour_date = "%g:%i%a";
            scheduler.config.day_date = "%l";
            scheduler.config.edit_on_create = false;
            scheduler.config.details_on_dblclick = false;
            scheduler.templates.event_text = function(start, end, ev){
                ev.text = "Able To Host Soir√©e";
                return ev.text;
            };

            scheduler.init('scheduler_here',new Date(),"week");

            scheduler.templates.xml_date = function(value){ return new Date(value); };
            scheduler.load("/defaultSchedule", "json");

            var dp = new dataProcessor("/saveDefaultEvent");
            dp.init(scheduler);
            dp.setTransactionMode("POST", false);

    }
    </script>
{{/extend}}

<body onload="init();">
<div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;'>
    <div class="dhx_cal_navline">
        <div class="dhx_cal_prev_button">&nbsp;</div>
        <div class="dhx_cal_next_button">&nbsp;</div>
        <div class="dhx_cal_today_button"></div>
        <div class="dhx_cal_date"></div>
    </div>
    <div class="dhx_cal_header">
    </div>
    <div class="dhx_cal_data">
    </div>
</div>
</body>

